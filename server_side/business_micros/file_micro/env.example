# Environment variables for the file microservice
# Copy this file to .env and customize for your specific service

# MinIO configuration
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=files
MINIO_REGION=us-east-1
MINIO_EXTERNAL_URL=http://localhost:9300

# Server configuration
SERVER_PORT=8060
SERVER_HOST=0.0.0.0
ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=INFO
LOG_CORRELATION_ID=true

# Security configuration
CORS_ENABLED=true
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Monitoring (for future use)
METRICS_ENABLED=false
TRACING_ENABLED=false

# Pagination configuration
PAGINATION_DEFAULT_LIMIT=50
PAGINATION_MAX_LIMIT=100

# Service specific configuration
SERVICE_NAME=file-service
SERVICE_VERSION=1.0.0
SERVICE_DESCRIPTION=file management microservice
