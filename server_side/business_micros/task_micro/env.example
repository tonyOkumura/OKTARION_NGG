# Environment variables for the microservice template
# Copy this file to .env and customize for your specific service

# Database configuration
MONGODB_CONNECTION_STRING=mongodb://taskuser:taskpass@localhost:27030/taskdb?authSource=admin
MONGODB_DATABASE=taskdb
DB_MAX_POOL_SIZE=10

# Server configuration
SERVER_PORT=8046
SERVER_HOST=0.0.0.0
ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=INFO
LOG_CORRELATION_ID=true

# Security configuration
CORS_ENABLED=true
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Pagination configuration
PAGINATION_DEFAULT_LIMIT=50
PAGINATION_MAX_LIMIT=100

# Monitoring (for future use)
METRICS_ENABLED=false
TRACING_ENABLED=false

# Service specific configuration
SERVICE_NAME=task-service
SERVICE_VERSION=1.0.0
SERVICE_DESCRIPTION=task management microservice
