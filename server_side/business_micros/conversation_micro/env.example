# Environment variables for the microservice template
# Copy this file to .env and customize for your specific service

# Database configuration
POSTGRES_URL=jdbc:postgresql://postgres:5434/conversationdb
POSTGRES_USER=conversationuser
POSTGRES_PASSWORD=conversationpass
DB_MAX_POOL_SIZE=10

# Server configuration
SERVER_PORT=8040
SERVER_HOST=0.0.0.0
ENVIRONMENT=development

# Logging configuration
LOG_LEVEL=INFO
LOG_CORRELATION_ID=true

# Security configuration
CORS_ENABLED=true
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Monitoring (for future use)
METRICS_ENABLED=false
TRACING_ENABLED=false

# Pagination configuration
PAGINATION_DEFAULT_LIMIT=50
PAGINATION_MAX_LIMIT=100

# Service specific configuration
SERVICE_NAME=conversation-service
SERVICE_VERSION=1.0.0
SERVICE_DESCRIPTION=Conversation management microservice
